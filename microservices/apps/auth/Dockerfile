FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

RUN addgroup --system microservices-auth && \
          adduser --system -G microservices-auth microservices-auth

COPY apps/auth/dist microservices-auth/
COPY apps/auth/package.json microservices-auth/
RUN chown -R microservices-auth:microservices-auth .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --prefix microservices-auth --omit=dev -f install

CMD [ "node", "microservices-auth" ]
