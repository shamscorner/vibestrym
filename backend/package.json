{
	"name": "backend",
	"version": "0.0.1",
	"description": "Vibestrym Backend - A NestJS GraphQL API for Twitch like streaming platform.",
	"author": "shamscorner",
	"private": true,
	"license": "MIT",
	"scripts": {
		"build": "nest build",
		"format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
		"start": "concurrently 'nest start' 'yarn doc'",
		"start:dev": "nest start --watch",
		"start:dev:full": "concurrently 'nest start --watch' 'yarn doc'",
		"start:debug": "nest start --debug --watch",
		"start:prod": "node dist/main",
		"lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
		"test": "jest",
		"test:watch": "jest --watch",
		"test:cov": "jest --coverage",
		"test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
		"test:e2e": "jest --config ./test/jest-e2e.json",
		"db:format": "prisma format",
		"db:migrate": "prisma migrate dev --name init",
		"db:push": "prisma format && prisma db push",
		"db:studio": "prisma studio",
		"db:seed": "ts-node src/core/prisma/prisma.seed.ts",
		"db:deploy": "prisma migrate deploy",
		"db:up": "docker compose up -d",
		"db:nuke": "docker compose down --volumes --remove-orphans",
		"db:reset": "run-s db-nuke db-up db:push db:seed",
		"generate-schemas": "prisma generate && prisma format",
		"ngrok:start": "ngrok http http://localhost:4000",
		"prepare": "husky",
		"doc": "npx @compodoc/compodoc -p tsconfig.json -s"
	},
	"dependencies": {
		"@apollo/server": "^4.12.2",
		"@aws-sdk/client-s3": "^3.842.0",
		"@nestjs-modules/mailer": "^2.0.2",
